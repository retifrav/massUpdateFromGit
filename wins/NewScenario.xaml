<Window x:Class="updateFromGit.NewScenario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание нового сценария" Height="128" Width="361" Icon="/reses/mainico.ico"
        ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen">
    <Grid Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Center">Имя сценария:</Label>
        <TextBox Name="scenarioName" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"
                 VerticalContentAlignment="Center" Width="Auto" FontSize="16"></TextBox>
        <StackPanel Margin="0 5 0 0" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsDefault="True" Height="30" Width="70" Click="createClicked">Создать</Button>
            <Button Margin="5 0 0 0" Height="30" Width="70" Click="cancelClicked" IsCancel="True">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
